<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".events.MasterCalendar">

    <View
        android:id="@+id/monthHeading"
        android:background="#3498DB"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        />

    <CalendarView
        android:id="@+id/calendarView"
        android:firstDayOfWeek="2"
        android:minDate="01/01/2018"
        android:maxDate="30/12/2028"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/myDateText"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="350dp"
        android:text="Date Picked"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/newEventBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="400dp"
        android:background="@color/appLogo"
        android:text="New Event" />

</RelativeLayout>