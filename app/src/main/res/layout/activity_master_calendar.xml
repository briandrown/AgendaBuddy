<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".events.MasterCalendar">

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:abbreviationsBarColor="@color/appLogo"
        app:pagesColor="@color/colorPrimary">

    </com.applandeo.materialcalendarview.CalendarView>

    <TextView
        android:id="@+id/myDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="450dp"
        android:text="Date Picked"
        android:textSize="23sp"
        />

    <Button
        android:id="@+id/newEventBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="490dp"
        android:background="@color/appLogo"
        android:text="New Event" />

</RelativeLayout>